rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function hasRole(roles) {
      // Check if user is signed in
      let isSignedIn = request.auth != null;
      // Safely get the user's role from their profile, defaulting to an empty string if it doesn't exist.
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '');

      return isSignedIn && userRole in roles;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USER PROFILES
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update: if isOwner(userId);
      allow read, write: if hasRole(['admin']);
    }
    
    // ATTENDANCE
    match /attendance/{attendanceId} {
      allow create: if isOwner(request.resource.data.userId);
      // Allow user to read their own record, or allow teachers/admins to read any.
      allow read: if isOwner(resource.data.userId) || hasRole(['teacher', 'admin']);
      allow list: if hasRole(['teacher', 'admin']);
    }

    // ANNOUNCEMENTS
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if hasRole(['teacher', 'admin']);
    }

    // ASSIGNMENTS
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if hasRole(['teacher', 'admin']);
    }

    // SUBMISSIONS
    match /assignments/{assignmentId}/submissions/{studentId} {
      allow create, read, update: if isOwner(studentId);
      allow list, read, update: if hasRole(['teacher', 'admin']);
    }

    // CHAT HISTORY
    match /chats/{chatId} {
      // A user can create, read, and write to their own chat history documents
      allow create: if isOwner(request.resource.data.userId);
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // LIVE CLASSES
    match /liveClasses/{classId} {
      allow read: if hasRole(['student', 'teacher', 'admin']);
      allow write: if hasRole(['teacher', 'admin']);
    }

    // RECORDED LECTURES
    match /recordedLectures/{lectureId} {
      allow read: if request.auth != null;
      allow create: if hasRole(['teacher', 'admin']);
    }
  }
}
